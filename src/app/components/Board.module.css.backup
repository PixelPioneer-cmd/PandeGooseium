  background: rgba(147, 51, 234, 0.15);
  border: 2px solid #9333ea;
  box-shadow: 0 0 8px rgba(147, 51, 234, 0.3);
}

.hotelSquare:hover .squareFront {
  background: rgba(147, 51, 234, 0.25);
  box-shadow: 0 0 12px rgba(147, 51, 234, 0.5);
}

/* Case puits - Design plat moderne indigo néon */
.puitsSquare .squareFront {
  background: rgba(99, 102, 241, 0.15);
  border: 2px solid #6366f1;
  box-shadow: 0 0 8px rgba(99, 102, 241, 0.3);
}

.puitsSquare:hover .squareFront {
  background: rgba(99, 102, 241, 0.25);
  box-shadow: 0 0 12px rgba(99, 102, 241, 0.5);
}

/* Case labyrinthe - Design plat moderne orange néon */
.labyrintheSquare .squareFront {
  background: rgba(249, 115, 22, 0.15);
  border: 2px solid #f97316;
  box-shadow: 0 0 8px rgba(249, 115, 22, 0.3);
}

.labyrintheSquare:hover .squareFront {
  background: rgba(249, 115, 22, 0.25);
  box-shadow: 0 0 12px rgba(249, 115, 22, 0.5);
}

/* Case prison - Design plat moderne gris néon */
.prisonSquare .squareFront {
  background: rgba(107, 114, 128, 0.15);
  border: 2px solid #6b7280;
  box-shadow: 0 0 8px rgba(107, 114, 128, 0.3);
}

.prisonSquare:hover .squareFront {
  background: rgba(107, 114, 128, 0.25);
  box-shadow: 0 0 12px rgba(107, 114, 128, 0.5);
}

/* Case mort - Design plat moderne noir/rouge néon */
.mortSquare .squareFront {
  background: rgba(17, 24, 39, 0.8);
  border: 2px solid #ef4444;
  box-shadow: 0 0 8px rgba(239, 68, 68, 0.4);
}

.mortSquare:hover .squareFront {
